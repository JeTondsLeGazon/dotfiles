function f(){
  # Uses fzf to go to specific directory in ~/checkout/
  cd $(find ~/checkout/ -maxdepth 4 -type d -name ".git" -not -path "*/__*" -not -path "*/.venv*"  -exec dirname '{}' \; | fzf| xargs echo )
}

function uvim(){
  if [ -f "service.env" ]; then
    uv run --env-file service.env --no-sync nvim . 
  else
    if [ -f ".env" ]; then
      uv run --no-sync --env-file .env nvim .
    else
      uv run --no-sync nvim .
    fi
  fi
}

function fvim(){
  f
  if [ -f "setup.cfg" ]; then
    act
    nvim .
  else
    # Otherwise, run nvim
    uvim
  fi
}

function dlog(){
  # Uses fzf to select a docker container and then runs docker logs on it
  docker logs -f $(docker ps --format '{{.Names}}' | fzf)
}
